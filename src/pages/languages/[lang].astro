---
import PageLayout from '@/layouts/PageLayout.astro';
import Card from '@/components/ui/Card.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  const languages = [...new Set(posts.map(post => post.data.language).filter(Boolean))];

  return languages.map(lang => ({
    params: { lang: lang?.toLowerCase().replace(/\s+/g, '-') },
    props: { language: lang },
  }));
}

const { language } = Astro.props;

const allPosts = await getCollection('posts', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Filter posts by language
const languagePosts = allPosts.filter(post => post.data.language === language);

// Sort by date (newest first)
const sortedPosts = languagePosts.sort((a, b) =>
  b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

// Get related tags
const relatedTagsMap = new Map<string, number>();
languagePosts.forEach(post => {
  post.data.tags.forEach(tag => {
    relatedTagsMap.set(tag, (relatedTagsMap.get(tag) || 0) + 1);
  });
});

const relatedTags = Array.from(relatedTagsMap.entries())
  .sort((a, b) => b[1] - a[1])
  .slice(0, 15)
  .map(([tag]) => tag);
---

<PageLayout title={language || ''} description={`Notes about ${language}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Breadcrumb -->
    <nav class="flex items-center gap-2 text-sm text-notion-text dark:text-notion-text-dark/60 mb-6">
      <a href="/languages" class="hover:text-notion-blue transition-colors">Languages</a>
      <span>/</span>
      <span class="text-notion-text dark:text-notion-text-dark">{language}</span>
    </nav>

    <!-- Header -->
    <div class="mb-12">
      <h1 class="text-3xl sm:text-4xl font-bold text-notion-text dark:text-notion-text-dark mb-4">
        {language}
      </h1>
      <p class="text-lg text-notion-text dark:text-notion-text-dark/70">
        {sortedPosts.length} {sortedPosts.length === 1 ? 'note' : 'notes'} about {language}
      </p>
    </div>

    <!-- Related Tags -->
    {relatedTags.length > 0 && (
      <div class="mb-8">
        <h2 class="text-sm font-semibold text-notion-text dark:text-notion-text-dark/60 uppercase tracking-wider mb-3">
          Topics
        </h2>
        <div class="flex flex-wrap gap-2">
          {relatedTags.map(tag => (
            <a
              href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`}
              class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-notion-gray dark:bg-notion-gray-dark text-notion-text dark:text-notion-text-dark hover:bg-notion-border dark:hover:bg-notion-border-dark transition-colors"
            >
              #{tag}
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Posts Grid -->
    {sortedPosts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {sortedPosts.map(post => (
          <Card post={post} />
        ))}
      </div>
    ) : (
      <div class="text-center py-16">
        <p class="text-notion-text dark:text-notion-text-dark/60">
          No posts found for this language.
        </p>
        <a
          href="/languages"
          class="inline-flex items-center mt-4 text-notion-blue hover:underline"
        >
          Browse all languages
          <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    )}
  </div>
</PageLayout>
