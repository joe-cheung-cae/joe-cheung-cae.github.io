---
import PageLayout from '@/layouts/PageLayout.astro';
import { siteConfig } from '@/site.config';

const projects = [
  {
    name: 'QuickHull 3D',
    description: 'High-performance 3D convex hull implementation in C++ with CUDA acceleration support.',
    tags: ['C++', 'CUDA', 'Computational Geometry'],
    github: 'https://github.com/username/quickhull3d',
    demo: null,
  },
  {
    name: 'CMake Presets',
    description: 'A collection of modern CMake presets for cross-platform C++ development.',
    tags: ['CMake', 'Build Systems', 'DevTools'],
    github: 'https://github.com/username/cmake-presets',
    demo: null,
  },
  {
    name: 'CUDA Examples',
    description: 'Educational CUDA code samples covering from basics to advanced optimization techniques.',
    tags: ['CUDA', 'GPU', 'Parallel Computing'],
    github: 'https://github.com/username/cuda-examples',
    demo: null,
  },
  {
    name: 'Tech Notes Blog',
    description: 'This very blog â€” a notion-like technical notes site built with Astro.',
    tags: ['Astro', 'TypeScript', 'Tailwind'],
    github: 'https://github.com/username/tech-notes',
    demo: siteConfig.siteUrl,
  },
];
---

<PageLayout title="Projects" description="Open source projects and contributions">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h1 class="text-3xl sm:text-4xl font-bold text-notion-text dark:text-notion-text-dark mb-4">
        Projects
      </h1>
      <p class="text-lg text-notion-text dark:text-notion-text-dark/70">
        Open source work and side projects
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {projects.map((project) => (
        <div class="group p-6 rounded-xl border border-notion-border dark:border-notion-border-dark bg-notion-bg dark:bg-notion-bg-dark hover:border-notion-blue dark:hover:border-notion-blue transition-all duration-200">
          <div class="flex items-start justify-between mb-4">
            <h2 class="text-xl font-semibold text-notion-text dark:text-notion-text-dark group-hover:text-notion-blue transition-colors">
              {project.name}
            </h2>
            <div class="flex items-center gap-2">
              {project.github && (
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-notion-text dark:text-notion-text-dark/60 hover:text-notion-blue transition-colors"
                  aria-label="View on GitHub"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
              {project.demo && (
                <a
                  href={project.demo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-notion-text dark:text-notion-text-dark/60 hover:text-notion-blue transition-colors"
                  aria-label="View demo"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                </a>
              )}
            </div>
          </div>

          <p class="text-notion-text dark:text-notion-text-dark/70 mb-4">
            {project.description}
          </p>

          <div class="flex flex-wrap gap-2">
            {project.tags.map((tag) => (
              <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-notion-gray dark:bg-notion-gray-dark text-notion-text dark:text-notion-text-dark/70">
                {tag}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
      <p class="text-notion-text dark:text-notion-text-dark/60 mb-4">
        More projects on GitHub
      </p>
      <a
        href={siteConfig.social.github}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-6 py-3 rounded-lg bg-notion-gray dark:bg-notion-gray-dark text-notion-text dark:text-notion-text-dark font-medium hover:bg-notion-border dark:hover:bg-notion-border-dark transition-colors"
      >
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View GitHub Profile
      </a>
    </div>
  </div>
</PageLayout>
