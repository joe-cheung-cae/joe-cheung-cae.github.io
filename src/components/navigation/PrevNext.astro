---
import type { CollectionEntry } from 'astro:content';

interface Props {
  prev?: CollectionEntry<'posts'>;
  next?: CollectionEntry<'posts'>;
}

const { prev, next } = Astro.props;
---

{(prev || next) && (
  <nav class="flex flex-col sm:flex-row gap-4 sm:gap-8">
    {prev && (
      <a
        href={`/blog/${prev.slug}`}
        class="group flex-1 p-4 rounded-lg border border-notion-border dark:border-notion-border-dark hover:border-notion-blue dark:hover:border-notion-blue transition-colors"
      >
        <span class="flex items-center gap-2 text-sm text-notion-text dark:text-notion-text-dark/60 mb-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Previous
        </span>
        <span class="text-notion-text dark:text-notion-text-dark font-medium group-hover:text-notion-blue transition-colors line-clamp-1">
          {prev.data.title}
        </span>
      </a>
    )}
    {!prev && <div class="flex-1 hidden sm:block" />}

    {next && (
      <a
        href={`/blog/${next.slug}`}
        class="group flex-1 p-4 rounded-lg border border-notion-border dark:border-notion-border-dark hover:border-notion-blue dark:hover:border-notion-blue transition-colors text-right"
      >
        <span class="flex items-center justify-end gap-2 text-sm text-notion-text dark:text-notion-text-dark/60 mb-1">
          Next
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </span>
        <span class="text-notion-text dark:text-notion-text-dark font-medium group-hover:text-notion-blue transition-colors line-clamp-1">
          {next.data.title}
        </span>
      </a>
    )}
    {!next && <div class="flex-1 hidden sm:block" />}
  </nav>
)}
