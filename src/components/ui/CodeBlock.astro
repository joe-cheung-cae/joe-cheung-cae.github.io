---
interface Props {
  filename?: string;
  language?: string;
  code: string;
}

const { filename, language, code } = Astro.props;
---

<div class="my-6 rounded-lg overflow-hidden bg-[#1e1e1e]">
  {/* Header */}
  {(filename || language) && (
    <div class="flex items-center justify-between px-4 py-2 bg-[#252526] border-b border-[#333]">
      {filename ? (
        <span class="text-sm text-gray-400 font-mono">{filename}</span>
      ) : (
        <span class="text-sm text-gray-500 uppercase">{language}</span>
      )}
      <button
        type="button"
        class="copy-btn flex items-center gap-1.5 px-2 py-1 text-xs text-gray-400 hover:text-white transition-colors rounded hover:bg-[#333]"
        data-code={code}
        aria-label="Copy code"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
        </svg>
        <span class="copy-text">Copy</span>
      </button>
    </div>
  )}

  {/* Code */}
  <div class="relative group">
    {!filename && !language && (
      <button
        type="button"
        class="copy-btn absolute top-2 right-2 opacity-0 group-hover:opacity-100 flex items-center gap-1.5 px-2 py-1 text-xs text-gray-400 hover:text-white transition-all rounded hover:bg-[#333]"
        data-code={code}
        aria-label="Copy code"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
        </svg>
        <span class="copy-text">Copy</span>
      </button>
    )}
    <pre class="p-4 overflow-x-auto text-sm leading-relaxed"><code class="language-{language}">{code}</code></pre>
  </div>
</div>

<script>
  document.querySelectorAll('.copy-btn').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const code = btn.getAttribute('data-code');
      const copyText = btn.querySelector('.copy-text');

      if (code) {
        try {
          await navigator.clipboard.writeText(code);
          if (copyText) {
            copyText.textContent = 'Copied!';
            setTimeout(() => {
              copyText.textContent = 'Copy';
            }, 2000);
          }
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      }
    });
  });
</script>
